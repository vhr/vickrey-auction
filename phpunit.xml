<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd" backupGlobals="false" colors="true" failOnRisky="true" failOnWarning="true">
  <coverage>
    <include>
      <directory>./src/</directory>
    </include>
    <report>
      <html outputDirectory="./coverage" lowUpperBound="50" highLowerBound="80"/>
      <xml outputDirectory="./coverage"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="all">
      <directory>./tests/*/</directory>
    </testsuite>
  </testsuites>
  <logging/>
</phpunit>